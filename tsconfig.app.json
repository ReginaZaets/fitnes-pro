{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "commonjs",  // Измените с ESNext на commonjs
    "skipLibCheck": true,
    "moduleResolution": "node",  // Измените с bundler на node
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": false,  // Попробуйте отключить изоляцию модулей
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
